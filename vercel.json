{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php-web",
      "config": {
        "php_version": "8.1"
      }
    },
    {
      "src": "**/*.php",
      "use": "@vercel/php-web",
      "config": {
        "php_version": "8.1"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "public/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_KEY": "base64:your_app_key_here",
    "APP_DEBUG": "true"
  }
}
